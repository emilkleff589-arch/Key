--[[ 
    TITANIUM UI LIBRARY | ULTRA-GLOSS EDITION (V2.9.0)
    
    [VISUAL UPGRADES]
    - Sidebar "Glass-Lite" Effect: Added internal specular highlights.
    - Tab Gloss: Reflective vertical gradients on active tabs.
    - Lucide Home Integration: Hardcoded high-fidelity Home icon for the main tab.
    - Invisible Text Foundations: 100% background transparency on all labels.
    - Beveled Strokes: Multi-stage gradients for that "Machined" look.
]]

local Library = {
    Theme = {
        Main = Color3.fromRGB(10, 10, 10),
        Sidebar = Color3.fromRGB(20, 20, 20),
        Accent = Color3.fromRGB(0, 160, 255),
        Text = Color3.fromRGB(255, 255, 255),
        SubText = Color3.fromRGB(140, 140, 140),
        Stroke = Color3.fromRGB(70, 70, 70),
        GlassHighlight = Color3.fromRGB(255, 255, 255),
        -- Lucide Asset Mapping
        Icons = {
            ["home"] = "rbxassetid://10723345518",
            ["settings"] = "rbxassetid://10709819149",
            ["zap"] = "rbxassetid://10705034321",
            ["shield"] = "rbxassetid://10705036544"
        }
    }
}

local TweenService = game:GetService("TweenService")
local UserInputService = game:GetService("UserInputService")
local CoreGui = game:GetService("CoreGui")
local Viewport = (gethui and gethui()) or CoreGui

local function QuickTween(obj, props, time)
    TweenService:Create(obj, TweenInfo.new(time or 0.35, Enum.EasingStyle.Quint), props):Play()
end

function Library:CreateWindow(cfg)
    local ScreenGui = Instance.new("ScreenGui", Viewport)
    ScreenGui.Name = "Titanium_UltraGloss"
    
    --// MAIN FRAME (0.08 CLEAR GLASS)
    local Main = Instance.new("Frame", ScreenGui)
    Main.Size = UDim2.new(0, 670, 0, 450)
    Main.Position = UDim2.new(0.5, -335, 0.5, -225)
    Main.BackgroundColor3 = Library.Theme.Main
    Main.BackgroundTransparency = 0.08
    
    local MainCorner = Instance.new("UICorner", Main)
    MainCorner.CornerRadius = UDim.new(0, 12)

    -- Specular Main Stroke
    local MainStroke = Instance.new("UIStroke", Main)
    MainStroke.Thickness = 1.2
    MainStroke.Color = Color3.new(1,1,1)
    local MStrokeGrad = Instance.new("UIGradient", MainStroke)
    MStrokeGrad.Color = ColorSequence.new({
        ColorSequenceKeypoint.new(0, Library.Theme.GlassHighlight),
        ColorSequenceKeypoint.new(0.4, Library.Theme.Stroke),
        ColorSequenceKeypoint.new(1, Color3.fromRGB(20, 20, 20))
    })
    MStrokeGrad.Rotation = 45

    --// SIDEBAR (GLOSSY ENHANCEMENT)
    local Sidebar = Instance.new("Frame", Main)
    Sidebar.Size = UDim2.new(0, 170, 1, -60)
    Sidebar.Position = UDim2.new(0, 12, 0, 50)
    Sidebar.BackgroundColor3 = Library.Theme.Sidebar
    Sidebar.BackgroundTransparency = 0.45
    Instance.new("UICorner", Sidebar).CornerRadius = UDim.new(0, 10)

    -- Sidebar Gloss Gradient
    local SideGrad = Instance.new("UIGradient", Sidebar)
    SideGrad.Color = ColorSequence.new({
        ColorSequenceKeypoint.new(0, Color3.fromRGB(60, 60, 60)),
        ColorSequenceKeypoint.new(0.5, Color3.fromRGB(30, 30, 30)),
        ColorSequenceKeypoint.new(1, Color3.fromRGB(20, 20, 20))
    })
    SideGrad.Rotation = 90

    local SideStroke = Instance.new("UIStroke", Sidebar)
    SideStroke.Thickness = 1
    SideStroke.Color = Library.Theme.Stroke
    SideStroke.Transparency = 0.6

    local TabHolder = Instance.new("ScrollingFrame", Sidebar)
    TabHolder.Size = UDim2.new(1, 0, 1, -10)
    TabHolder.Position = UDim2.new(0, 0, 0, 5)
    TabHolder.BackgroundTransparency = 1
    TabHolder.ScrollBarThickness = 0
    Instance.new("UIListLayout", TabHolder).Padding = UDim.new(0, 5)
    Instance.new("UIPadding", TabHolder).PaddingLeft = UDim.new(0, 10)
    Instance.new("UIPadding", TabHolder).PaddingRight = UDim.new(0, 10)

    --// CONTENT
    local Content = Instance.new("Frame", Main)
    Content.Size = UDim2.new(1, -205, 1, -60)
    Content.Position = UDim2.new(0, 195, 0, 50)
    Content.BackgroundTransparency = 1

    --// DRAG & RESIZE SYSTEM
    local TopBar = Instance.new("Frame", Main)
    TopBar.Size = UDim2.new(1, 0, 0, 45)
    TopBar.BackgroundTransparency = 1

    local ResizeBtn = Instance.new("ImageButton", Main)
    ResizeBtn.Size = UDim2.new(0, 16, 0, 16)
    ResizeBtn.Position = UDim2.new(1, -18, 1, -18)
    ResizeBtn.BackgroundTransparency = 1
    ResizeBtn.Image = "rbxassetid://6031289116"
    ResizeBtn.ImageColor3 = Library.Theme.Accent

    -- (Dragging logic)
    local dragging, dragStart, startPos
    TopBar.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = true; dragStart = input.Position; startPos = Main.Position
            input.Changed:Connect(function() if input.UserInputState == Enum.UserInputState.End then dragging = false end end)
        end
    end)
    UserInputService.InputChanged:Connect(function(input)
        if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
            local delta = input.Position - dragStart
            Main.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
        end
    end)

    -- (Resizing logic)
    local resizing, resStart, resSize
    ResizeBtn.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            resizing = true; resStart = input.Position; resSize = Main.Size
            input.Changed:Connect(function() if input.UserInputState == Enum.UserInputState.End then resizing = false end end)
        end
    end)
    UserInputService.InputChanged:Connect(function(input)
        if resizing and input.UserInputType == Enum.UserInputType.MouseMovement then
            local delta = input.Position - resStart
            Main.Size = UDim2.new(0, math.clamp(resSize.X.Offset + delta.X, 550, 1100), 0, math.clamp(resSize.Y.Offset + delta.Y, 350, 750))
        end
    end)

    local Window = {}
    local Tabs = {}

    function Window:CreateTab(tName, tIcon)
        local isHome = (#Tabs == 0)
        local finalName = isHome and "Home" or tName
        local finalIcon = isHome and "home" or tIcon

        local TabBtn = Instance.new("TextButton", TabHolder)
        TabBtn.Size = UDim2.new(1, 0, 0, 36)
        TabBtn.BackgroundColor3 = Color3.new(1,1,1)
        TabBtn.BackgroundTransparency = 1
        TabBtn.Text = ""
        TabBtn.AutoButtonColor = false
        Instance.new("UICorner", TabBtn).CornerRadius = UDim.new(0, 8)
        
        -- Gloss Reflection Gradient for Tab
        local TabGloss = Instance.new("UIGradient", TabBtn)
        TabGloss.Color = ColorSequence.new({
            ColorSequenceKeypoint.new(0, Color3.fromRGB(255, 255, 255)),
            ColorSequenceKeypoint.new(1, Color3.fromRGB(150, 150, 150))
        })
        TabGloss.Rotation = 90
        TabGloss.Enabled = false -- Enabled only when active

        local TStroke = Instance.new("UIStroke", TabBtn)
        TStroke.Color = Color3.new(1,1,1)
        TStroke.Transparency = 1
        TStroke.Thickness = 1

        local TIcon = Instance.new("ImageLabel", TabBtn)
        TIcon.Size = UDim2.new(0, 20, 0, 20)
        TIcon.Position = UDim2.new(0, 10, 0.5, -10)
        TIcon.BackgroundTransparency = 1
        TIcon.Image = Library.Theme.Icons[finalIcon] or Library.Theme.Icons["zap"]
        TIcon.ImageColor3 = Library.Theme.SubText

        local TText = Instance.new("TextLabel", TabBtn)
        TText.Text = finalName
        TText.Size = UDim2.new(1, -45, 1, 0)
        TText.Position = UDim2.new(0, 40, 0, 0)
        TText.Font = Enum.Font.GothamMedium
        TText.TextColor3 = Library.Theme.SubText
        TText.TextSize = 13
        TText.BackgroundTransparency = 1
        TText.TextXAlignment = Enum.TextXAlignment.Left

        local Page = Instance.new("CanvasGroup", Content)
        Page.Size = UDim2.new(1, 0, 1, 0)
        Page.BackgroundTransparency = 1
        Page.Visible = false
        
        local PageScroll = Instance.new("ScrollingFrame", Page)
        PageScroll.Size = UDim2.new(1, 0, 1, 0)
        PageScroll.BackgroundTransparency = 1
        PageScroll.ScrollBarThickness = 0
        Instance.new("UIListLayout", PageScroll).Padding = UDim.new(0, 10)

        local function Select()
            for _, v in pairs(Tabs) do
                v.Page.Visible = false
                QuickTween(v.Btn, {BackgroundTransparency = 1})
                QuickTween(v.Stroke, {Transparency = 1})
                QuickTween(v.Text, {TextColor3 = Library.Theme.SubText})
                QuickTween(v.Icon, {ImageColor3 = Library.Theme.SubText})
                v.Gloss.Enabled = false
            end
            
            Page.Visible = true
            Page.GroupTransparency = 1
            Page.Position = UDim2.new(0, 20, 0, 0)
            
            QuickTween(Page, {GroupTransparency = 0, Position = UDim2.new(0, 0, 0, 0)}, 0.5)
            QuickTween(TabBtn, {BackgroundTransparency = 0.9})
            QuickTween(TStroke, {Transparency = 0.7})
            QuickTween(TText, {TextColor3 = Library.Theme.Text})
            QuickTween(TIcon, {ImageColor3 = Library.Theme.Accent})
            TabGloss.Enabled = true
            
            -- Click Bounce
            TabBtn.Size = UDim2.new(1, -4, 0, 34)
            TweenService:Create(TabBtn, TweenInfo.new(0.6, Enum.EasingStyle.Elastic), {Size = UDim2.new(1, 0, 0, 36)}):Play()
        end

        TabBtn.MouseButton1Click:Connect(Select)
        table.insert(Tabs, {Btn = TabBtn, Page = Page, Text = TText, Icon = TIcon, Stroke = TStroke, Gloss = TabGloss})

        if isHome then Select() end
        
        return {} -- Section logic can be added here
    end

    return Window
end

return Library
